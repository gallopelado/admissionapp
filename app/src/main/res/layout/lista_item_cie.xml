<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tool="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackground"
        android:minHeight="72dp">

        <ImageView
            android:id="@+id/mtrl_list_item_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_medical"
            android:padding="32dp"/>

        <TextView
            android:id="@+id/tvNombreCie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            tool:text="Medicamento"
            android:layout_toEndOf="@id/mtrl_list_item_icon"
            android:layout_toRightOf="@id/mtrl_list_item_icon"
            android:layout_alignWithParentIfMissing="true"
            android:layout_toLeftOf="@id/mtrl_list_item_icon"
            android:layout_alignParentRight="true"
            android:paddingTop="16dp"
            android:paddingEnd="16dp"
            android:maxLines="1"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:textColor="@color/mtrl_list_item_tint"/>
        <TextView
            android:id="@+id/tvTipo"
            android:textSize="16sp"
            tool:text="Especialidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvNombreCie"
            android:layout_gravity="center_vertical"
            android:layout_toEndOf="@id/mtrl_list_item_icon"
            android:paddingEnd="16dp"
            android:maxLines="2"
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="@color/mtrl_list_item_tint"
            android:layout_toRightOf="@id/mtrl_list_item_icon"
            android:layout_alignWithParentIfMissing="true"
            android:layout_toLeftOf="@id/mtrl_list_item_icon"
            android:layout_alignParentRight="true"/>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

    </RelativeLayout>

</LinearLayout>