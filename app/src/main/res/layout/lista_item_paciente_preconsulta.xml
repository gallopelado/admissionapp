<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tool="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackground"
        android:minHeight="72dp">


        <ImageView
            android:id="@+id/mtrl_list_item_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_person"
            android:padding="32dp"/>

        <TextView
            android:id="@+id/tvCodigoPreconsulta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            tool:text="Codigo Preconsulta"
            android:layout_toEndOf="@id/mtrl_list_item_icon"
            android:layout_toRightOf="@id/mtrl_list_item_icon"
            android:layout_alignWithParentIfMissing="true"
            android:layout_toLeftOf="@id/mtrl_list_item_icon"
            android:layout_alignParentRight="true"
            android:paddingTop="5dp"
            android:paddingEnd="16dp"
            android:maxLines="1"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:textColor="@color/mtrl_list_item_tint"/>

        <TextView
            android:id="@+id/tvNombrePaciente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            tool:text="Paciente"
            android:layout_toEndOf="@id/mtrl_list_item_icon"
            android:layout_toRightOf="@id/mtrl_list_item_icon"
            android:layout_alignWithParentIfMissing="true"
            android:layout_toLeftOf="@id/mtrl_list_item_icon"
            android:layout_alignParentRight="true"
            android:paddingTop="25dp"
            android:paddingEnd="16dp"
            android:maxLines="1"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:textColor="@color/mtrl_list_item_tint"/>



        <TextView
            android:id="@+id/tvCedula"
            android:textSize="16sp"
            tool:text="Cedula"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvNombrePaciente"
            android:layout_gravity="center_vertical"
            android:layout_toEndOf="@id/mtrl_list_item_icon"
            android:paddingEnd="16dp"
            android:maxLines="2"
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="@color/mtrl_list_item_tint"
            android:layout_toRightOf="@id/mtrl_list_item_icon"
            android:layout_alignWithParentIfMissing="true"
            android:layout_toLeftOf="@id/mtrl_list_item_icon"
            android:layout_alignParentRight="true"/>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

    </RelativeLayout>

</LinearLayout>